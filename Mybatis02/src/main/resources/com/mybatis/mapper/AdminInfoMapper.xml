    <select id="findAdminInfoById" parameterType="int" resultMap="adminInfoMap">
        select * from admin_info as a where id = #{id}
    </select>
    <resultMap id="adminInfoMap" type="adminInfo">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="fs" ofType="functions" column="id" select="com.mybatis.mapper.FunctionsMapper.findFunctionsById">

        </collection>
    </resultMap>
</mapper>